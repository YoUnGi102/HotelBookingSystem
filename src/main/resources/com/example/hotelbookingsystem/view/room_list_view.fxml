                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="quality" prefHeight="50.0" prefWidth="150.0" promptText="Quality" styleClass="text-input" stylesheets="@../style/style.css">
